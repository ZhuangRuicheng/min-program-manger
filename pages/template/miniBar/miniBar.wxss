/* pages/template/miniBar/miniBar.wxss */

page {
  height: 100%;
  overflow: hidden;
}

::-webkit-scrollbar {
  width: 5rpx;
}

.box {
  height: 100%;
  overflow: hidden;
}

.header {
  position: fixed;
  width: 100%;
  height: 388rpx;
  overflow: hidden;
  z-index: 999;
}

.store-img {
  width: 100%;
  height: 300rpx;
}

.explain {
  background-color: white;
  height: 88rpx;
  line-height: 88rpx;
  color: #333;
  font-size: 26rpx;
  padding-left: 30rpx;
}

.content-container {
  height: 80%;
  display: flex;
  padding-top: 388rpx;
}

.classify-container {
  width: 174rpx;
  background-color: #f7f7f7;
  height: 80%;
}

.classify-container .classify {
  width: 174rpx;
  height: 120rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 120rpx;
  background-color: white;
  border-bottom: 1rpx solid #e2e2e2;
}

.classify-container .classify .name {
  display: inline-block;
  font-size: 30rpx;
  color: #999;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

.classify-container .classify.active {
  background: #f7f7f7;
}

.classify-container .classify.active .name {
  color: #333;
}

.goods-container {
  background: #fff;
  height: 85%;
}

.goods-container .title {
  padding-left: 18rpx;
  font-size: 26rpx;
  height: 63rpx;
  line-height: 63rpx;
  background: white;
  color: #666;
}

.goodsPadding {
  width: 100%;
}

.goods-container .goods {
  position: relative;
  height: 190rpx;
  line-height: 190rpx;
  border-bottom: 1rpx solid #f7f7f7;
}

.goods-container .goods .pic {
  float: left;
  width: 160rpx;
  height: 150rpx;
  padding-left: 18rpx;
  margin-right: 24rpx;
  margin-top: 15rpx;
}

.goods-container .goods .name {
  color: #333;
  font-size: 32rpx;
  line-height: 46rpx;
  padding-top: 30rpx;
}

.goods-container .goods .sold {
  color: #989898;
  font-size: 26rpx;
  width: 350rpx;
  margin-left: 200rpx;
  overflow: hidden;
  height: 46rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 46rpx;
}

label {
  font-size: 24rpx;
}

.goods-container .goods .price {
  color: #f45044;
  font-size: 32rpx;
  line-height: 70rpx;
  margin-top: -10rpx;
}

.goods-container .goods .addCart {
  position: absolute;
  right: 30rpx;
  bottom: 86rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
}

.goods-container .goods .addCart image {
  pointer-events: none;
  width: 44rpx;
  height: 44rpx;
}

.cart-detail, .cart-detail .mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.cart-detail .mask {
  background: rgba(0, 0, 0, 0.7);
}

.cart-detail .list {
  position: fixed;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  background: #f7f7f7;
  padding-bottom: 30rpx;
  z-index: 9999;
}

.cart-detail .list .item {
  display: -webkit-flex;
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
  padding: 20rpx 40rpx;
}

.cart-detail .list .item .name {
  -webkit-flex: 1;
}

.total {
  margin-left: 0rpx;
}

.cart-detail .list .item .total {
  width: 120rpx;
}

.reduce, .add {
  font-size: 40rpx;
  background: #ea5415;
  width: 50rpx;
  height: 50rpx;
  line-height: 45rpx;
  text-align: center;
  vertical-align: middle;
  border-radius: 50%;
  color: white;
}

.price-img-aad {
  display: flex;
}

.cart-detail .list .item .num {
  width: 50rpx;
  text-align: center;
  margin: 0 5rpx;
}

.cart {
  display: -webkit-flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  z-index: 9999;
}

.cart .data {
  -webkit-flex: 1;
  /*border-top: 1rpx solid #e7e7e7;*/
}

.cart .data .icon {
  position: absolute;
  left: 40rpx;
  top: -20rpx;
}

.cart .data .icon image {
  width: 100rpx;
  height: 100rpx;
}

.cart .data .icon .count {
  position: absolute;
  left: 80rpx;
  top: 0rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 0 12rpx;
  color: #fff;
  background: #f45044;
  border-radius: 50%;
}

.cart .data .total {
  color: #f45044;
  font-size: 40rpx;
  line-height: 100rpx;
  padding-left: 160rpx;
}

.cart button {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  background: #ea5415;
  color: white;
  border-radius: 16rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  /* -webkit-appearance: none; */
}

button {
  border-radius: 0rpx;
}

.l1 {
  padding-bottom: 200rpx;
}

.showreduce {
  font-size: 50rpx;
  background: #ff3030;
  display: inline-block;
  text-align: center;
  color: white;
}

.addreduce image {
  position: absolute;
  bottom: 25rpx;
  right: 160rpx;
  width: 44rpx;
  height: 44rpx;
}

.goodsQuantity {
  position: absolute;
  bottom: 20rpx;
  right: 76rpx;
  color: #989898;
  text-align: center;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}

.totalPrice {
  position: absolute;
  left: 360rpx;
}

.addreduceHi {
  display: none;
}

.cleanCart {
  font-size: 26rpx;
  height: 60rpx;
  background-color: f4f4f4;
  width: 100%;
  z-index: 999;
  border-bottom: 1rpx #ccc solid;
}

.cleanText {
  position: absolute;
  right: 45rpx;
  color: #999;
}

.clearCarts {
  width: 28rpx;
  height: 32rpx;
  position: absolute;
  right: 185rpx;
}

.class {
  padding-top: 15rpx;
}

.total-text {
  font-size: 28rpx;
  color: #333;
}

/* 模态框 */

.model-toast {
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.7);
  position: fixed;
  z-index: 9999;
  top: 0rpx;
}

.model-container {
  width: 550rpx;
  margin: 250rpx auto 0rpx auto;
  background-color: white;
  overflow: hidden;
  z-index: 9999;
  padding-bottom: 50rpx;
}

.model-header {
  width: 550rpx;
  margin: auto;
}

.model-img {
  width: 100%;
  height: 550rpx;
}

.toast-name-img {
  display: flex;
  margin-top: 20rpx;
}

.toast-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding-left: 30rpx;
}

.toast-img {
  position: absolute;
  right: 120rpx;
}

.toast-add {
  width: 50rpx;
  height: 50rpx;
}

.toast-price {
  font-size: 34rpx;
  color: #ff3030;
  font-weight: bold;
  padding-left: 30rpx;
  margin-top: 10rpx;
}

.toast-info {
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.toast-scroll {
  height: 100rpx;
  width: 100%;
}

.model-close {
  position: absolute;
  right: 50rpx;
  margin-top: 180rpx;
}
