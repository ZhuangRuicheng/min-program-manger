  margin-top: 60rpx;
}

.showContent {
  font-size: 30rpx;
  width: 540rpx;
  text-align: center;
  margin-top: 40rpx;
  color: #ea5415;
}

.showBtn {
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  background-color: #ea5415;
  color: white;
  font-size: 32rpx;
  margin-top: 40rpx;
