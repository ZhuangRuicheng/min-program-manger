/* 输入信息框样式 */

input {
  height: 88rpx;
  border: 1rpx #bebebe solid;
  margin: 50rpx 30rpx 0rpx 30rpx;
  font-size: 30rpx;
  color: #333;
  padding-left: 30rpx;
}

.info {
  height: 386rpx;
  background-color: white;
  padding-bottom: 28rpx;
}

.input {
  font-size: 28rpx;
}

.cludeInfo {
  display: flex;
}

.name {
  margin: 30rpx 0rpx -30rpx 50rpx;
  font-size: 32rpx;
  color: #666;
}

.Tips {
  margin: 30rpx 0rpx -38rpx 220rpx;
  color: #999;
  font-size: 26rpx;
}

.star {
  color: red;
}

.Remarks {
  margin: 50rpx 0rpx -30rpx 50rpx;
}

.payBtn {
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 16rpx;
  background-color: #ea5415;
  color: white;
  font-size: 30rpx;
  margin-top: 20rpx;
  position: absolute;
  right: 60rpx;
}

.bottomCss {
  display: flex;
  height: 120rpx;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color: white;
  z-index: 999;
}

.countText {
  line-height: 120rpx;
  margin-left: 30rpx;
}

.bottomMoney {
  line-height: 120rpx;
  padding-right: 40rpx;
}

/* 弹出层样式 */

.buydes-dialog-container {
  width: 100%;
  height: 100%;
  justify-content: space-between;
  background-color: rgba(15, 15, 26, 0.7);
  position: fixed;
  z-index: 999;
  /* position: absolute; */
  top: 0rpx;
}

.buydes-dialog-container-top {
  flex-grow: 1;
}

.buydes-dialog-container-bottom {
  display: flex;
  flex-grow: 0;
}

.popup {
  margin: 300rpx 0rpx 80rpx 104rpx;
  background-color: white;
}

.ticketShow {
  height: 300rpx;
  width: 540rpx;
  border-bottom: 1rpx #dfdfdf dotted;
}

.text {
  font-size: 36rpx;
  width: 540rpx;
