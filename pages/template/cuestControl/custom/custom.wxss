.custom-box {
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.7);
  position: fixed;
  top: 0rpx;
  z-index: 999;
}

.custom-content {
  width: 640rpx;
  padding-bottom: 80rpx;
  background-color: white;
  margin: 340rpx auto 0rpx auto;
  border-radius: 16rpx;
}

.custom-header {
  height: 100rpx;
  line-height: 100rpx;
  background-color: #ea5415;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

icon {
  position: absolute;
  right: 75rpx;
  margin-top: 21rpx;
}

.custom-tr1 {
  display: flex;
}

.custom-img {
  margin: 4rpx 16rpx 22rpx 32rpx;
}

.custom-toast {
  height: 41rpx;
  width: 39rpx;
}

.coustom-text {
  font-size: 30rpx;
  color: white;
}

.custom-switch {
  margin: 30rpx 0rpx 44rpx 32rpx;
}

.switch-text {
  font-size: 36rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
  background-color: #ea5415;
  color: white;
  text-align: center;
  line-height: 90rpx;
}

.switch-title {
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
  margin-left: 18rpx;
}

.custom-tr2 {
  margin: 50rpx 0rpx 30rpx 32rpx;
}

.custom-hh {
