.air-box {
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.7);
  position: fixed;
  top: 0rpx;
  z-index: 999;
}

.air-content {
  width: 640rpx;
  padding-bottom: 80rpx;
  background-color: white;
  margin: 280rpx auto 0rpx auto;
  border-radius: 16rpx;
}

.air-header {
  background-color: #ea5415;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.air-tr {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  border-bottom: 1rpx #dcdcdc solid;
}

