/* pages/person_Center/personInfo/personInfo.wxss */
page{
  background-color: #f7f7f7;
}
.box{
  margin-top: 30rpx;
}
.header-img{
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  font-size: 32rpx;
  color: #333333;
  background-color: white;
  padding-left: 50rpx;
}

.img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 20rpx;
  margin-left: 84rpx;
}
.userinfo-avatar{
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
}
.hr{
  height: 1rpx;
  background-color: #dcdcdc;
  margin-left: 30rpx;
}
.hr2{
  height: 2rpx;
  background-color: #dcdcdc;
  margin-left: 30rpx;
}
.name-title{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  background-color: white;
  padding-left: 50rpx;
  font-size: 32rpx;
  color: #333333;
}
.name{
  color: #999999;
  margin-left: 90rpx;
}
.input{
  color: #ea5415;
  margin-left: 36rpx;
}
.number{
  margin-left: 56rpx;
  color: #999999;
}
.no-number{
  display: flex;
}
.id-show{
  display: flex;
  border-bottom: 1rpx #dcdcdc solid;
}
.phone-num{
  display: flex;
}
.getPhone{
  color: #ea5415;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border: transparent;
  background-color: transparent;
  margin-left: 10rpx;
}
.getPhone::after{
  border: none;
}
.id{
  width: 95rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 6rpx;
  color: white;
  background-color: #ea5415;
  font-size: 26rpx;
  text-align: center;
  position: absolute;
  right: 100rpx;
  margin-top: 27rpx;
}
