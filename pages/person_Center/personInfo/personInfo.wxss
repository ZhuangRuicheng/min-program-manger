.name-box{
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 26, 0.7);
  position: fixed;
  top: 0rpx;
  z-index: 999;
  
}
icon {
  position: absolute;
  right: 75rpx;
  margin-top: 21rpx;
}
.input-name{
