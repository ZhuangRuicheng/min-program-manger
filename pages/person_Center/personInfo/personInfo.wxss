  border-radius: 12rpx;
  margin: auto;
  margin-top: 200rpx;

}
.input-name-label{
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #333333;
  border-bottom: 1rpx #dcdcdc solid;
}
.input-names{
  font-size: 32rpx;
  width: 488rpx;
  height: 80rpx;
  border: 1rpx #cccccc solid;
  margin: auto;
  margin-top: 44rpx;
  padding-left: 30rpx;
}
.btn{
  margin-top: 56rpx;
  text-align: center;
}
.save{
