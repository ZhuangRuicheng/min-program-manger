/* pages/index/hotelReservation/halfDayFilling/halfDayFilling.wxss */
@import "../../../template/hotelReservation/hotelReservation.wxss";
.box{
  color: #333333;
  padding-bottom: 158rpx;
}
.header{
  height: 360rpx;
  background-color: #ea5415;
 
}
.headerCss{
  margin: 0rpx 30rpx 0rpx 30rpx;
  width: 690rpx;
}
.Title{
  height: 75rpx;
  background-color: white;
  border-bottom: 1rpx #dcdcdc dashed;
  font-size: 32rpx;
  line-height: 75rpx;
  padding-left: 20rpx;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}
.content{
  height: 201rpx;
  background-color: white;
  font-size: 32rpx;
  padding: 15rpx 0rpx 0rpx 20rpx;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.Time{
  display: flex;
  font-size: 26rpx;
  color: #666666;
  margin-top: 30rpx;
}
.timeColor{
  color: #ea5415;
}
.days{
  font-size: 26rpx;
  color: #666666;
  margin: 30rpx 284rpx 32rpx 284rpx;
}
.clockText{
  font-size: 30rpx;
  margin-right: 20rpx;
  color: #ea5415;
}
.checkOut{
  position: absolute;
  right: 60rpx;
}
/* 弹出层样式 */
    .buydes-dialog-container{
    width: 100%;
    height: 100%;
    justify-content: space-between;
    background-color:rgba(15, 15, 26, 0.7);
    position: fixed;
    z-index: 999;
    /* position: absolute; */
    top: 0rpx;
}
.buydes-dialog-container-top{
    flex-grow: 1;
}
 
.buydes-dialog-container-bottom{
    display: flex;
    flex-grow: 0;
}

.popup{
  margin: 300rpx 0rpx 80rpx 104rpx;
  background-color: white;
}
.ticketShow{
  height: 360rpx;
  width: 540rpx;
  border-bottom: 1rpx #dfdfdf dotted;
}
.text{
  font-size: 36rpx;
   width: 540rpx;
   text-align: center;
   margin-top: 60rpx;
}
.half-time{
  padding-left: 20rpx;
}
.showContent{
  font-size: 30rpx;
   width: 540rpx;
   text-align: center;
   margin-top: 40rpx;
   color: #ea5415;
}

.showBtn{
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  background-color: #ea5415;
  color: white;
  font-size: 32rpx;
   margin-top: 40rpx;
  line-height: 80prx;
}